!!! Strict
%html{html_attrs}
  %head
    %title Quiz
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'

    = javascript_include_tag 'jquery'
  %body
    #container
      #header
        %h1 Quiz
        #language
          //= image_tag('/images/pl.gif')
          //- form_tag language_path, :method => :put do
          //  = select_tag :language, options_for_select(I18n.available_locales.map(&:to_s), I18n.locale.to_s)
          //  = submit_tag t('views.path.change_language')
        #navigation
          - if current_user
            = render "layouts/#{current_user.type.underscore}_menu"
          %ul#user-navigation
            - if current_user
              %li.first= link_to t("views.path.account"), account_path
              %li.last= link_to t("views.path.logout"), user_session_path, :method => :delete
            - else
              %li.last= link_to t("views.path.login"), new_user_session_path

      #sidebar
        = yield :sidebar
      #content
        = flash_messages
        = yield
      #footer
        2009

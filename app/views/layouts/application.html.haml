!!! Strict
%html{html_attrs}
  %head
    %title Quiz
    =# stylesheet_link_tag "quiz", "formtastic"

    =# stylesheet_link_tag 'compiled/partials/_base.css'
    =# stylesheet_link_tag 'compiled/print.css', :media => 'print'
    =# stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    =# stylesheet_link_tag "http://yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css"
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    =# stylesheet_link_tag 'yuiapp'
    =# stylesheet_link_tag 'aqua'

    = javascript_include_tag 'jquery'
  %body
    #container
      #header
        %h1 Quiz
        #navigation
          - if current_user
            = render "layouts/#{current_user.type.underscore}_menu"
          %ul#user-navigation
            - if current_user
              %li.first= link_to t("views.path.account"), account_path
              %li= link_to t("views.path.logout"), user_session_path, :method => :delete
            - else
              %li= link_to t("views.path.login"), new_user_session_path
            %li.last
              - form_tag language_path, :method => :put do
                = select_tag :language, options_for_select(I18n.available_locales.map(&:to_s), I18n.locale.to_s)
                = submit_tag t('views.path.change_language')
      #sidebar
        = yield :sidebar
      #content
        = flash_messages
        = yield
      #footer
        2009
